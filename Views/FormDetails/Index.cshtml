@model BPMPlus.ViewModels.FormDetailsGroupViewModel


@section Style {

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- daterange picker -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/daterangepicker/daterangepicker.css">
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Bootstrap Color Picker -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/AdminLTE/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- Bootstrap4 Duallistbox -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/bootstrap4-duallistbox/bootstrap-duallistbox.min.css">
    <!-- BS Stepper -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/bs-stepper/css/bs-stepper.min.css">
    <!-- dropzonejs -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/dropzone/min/dropzone.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <style>
         .title {
            color: rgba(0, 81, 255, 0.884);
            margin-top: 20px;
            margin-bottom: 30px;
            margin-left: 30px;
            font-weight: bold;
        }
        .backcolor {
            background-color: rgb(225, 239, 252);
        }

        .item-name {
            padding-right: 1%;
            width: 28%;
        }

        .item-value {
            width: 0%;
        }

        .button {
            width: 12 %;
        }

        .btn-link {
            color: white;
        }

        .button-icon {
            width: 20%;
        }

        .process-node {
            background-color: rgb(232, 244, 255);
            height: 200px;
        }

        textarea {
            resize: none;
        }

        .txt-box {
            width: 50%;
        }

        .selection {
            width: 50%;
        }

        .date {
            width: 50%;
        }

        .content {
            padding: 3%
        }

        .form-group {
            display: flex;
        }

        table {
            text-align: center;
            line-height: 1.5;
        }

    </style>
}

<div class="wrapper backcolor">


    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <h3 class="title">
                工單細節
            </h3>
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-default col-md-12">

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="item-name">單號</label><input class="form-control txt-box" disabled value="@Model.FormDetails.FormId">
                            </div>
                            <br />
                            <br />
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label class="item-name">建立日期</label><input class="form-control txt-box" disabled value="@Model.FormDetails.Date">
                            </div>
                            <div class="form-group" style="display:flex">
                                <label class="item-name">需求部門</label><input class="form-control txt-box" disabled value="@Model.FormDetails.DepartmentName">
                            </div>

                            <div class="form-group" style="display:flex">
                                <label class="item-name">希望完成日期</label>
                                <div class="input-group date">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </div>
                                    <input disabled type="text" class="form-control float-right" id="reservation"  value="@Model.FormDetails.ExpectedFinishedDay">
                                </div>
                            </div>

                            <!-- /.form-group -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-6">

                            <div style="display:flex">
                                <div style="width:27%"></div>
                                <div class="form-group">
                                    <a class="button btn btn-warning btn-link" asp-area="" asp-controller="ModifyForm" asp-action="Index" asp-route-id="@Model.FormDetails.FormId"><i class="fa-solid fa-pen-to-square"></i> 修改</a>
                                </div>
                                <div style="width:15%"></div>
                                 <form id="myform" method="post" asp-controller="FormDetails" asp-action="Invalid" >
                                    <input type="hidden" name="id" value="@Model.FormDetails.Id" />
                                <div class="form-group">
                                        <button id="btnInvalid" class="button btn btn-danger" type="submit" onclick='this.form.action="@Url.Action("Invalid", "FormDetails")";'><i class="fa-solid fa-trash"></i> 作廢</button>
                                </div>
                                </form>
                            </div>

                            <br />
                            <br />
                            <div>
                                <div class="form-group" style="display:flex">
                                    <label class="item-name">需求類別</label><input class="form-control txt-box" disabled value="@Model.FormDetails.CategoryDescription">
                                    
                                </div>
                                <div class="form-group">
                                    <label class="item-name">需求員工</label><input class="form-control txt-box" disabled value="@Model.FormDetails.EmployeeName">
                                </div>
                    @*          <div class="form-group">
                                    <label class="item-name">所屬專案</label><input class="form-control txt-box" disabled value="@Model.ProjectName">
                                </div> *@
                            </div>
                        </div>

                        <!-- /.col -->
@*                     </div>
                    <div>
                        <div class="form-group">
                            <label class="item-name">處理狀態</label>
                        </div>
                        <div style="width:100%; height:150px" class="backcolor">
                        </div>
                    </div>
                    <br />
                    <br /> *@

                        <label>流程進度</label>
                        <br>
                        <div class="formBackground btnArea">
                            <div>
                                <button class="btn btn-sm btn-primary btns">提單</button>
                                <button class="btn btn-sm btn-danger btns">一級主管</button>
                                <button class="btn btn-sm btn-primary btns">二級主管</button>
                                <button class="btn btn-sm btn-primary btns">二級主管</button>
                                <button class="btn btn-sm btn-primary btns">一級主管</button>
                                <button class="btn btn-sm btn-primary btns">處理人員</button>
                                <button class="btn btn-sm btn-primary btns">驗收</button>
                            </div>
                        </div><br /><br />

                    <!--  工單處理紀錄  -->
                    <label>處理紀錄</label>
                    <table class="table table-hover table-bordered ">
                        <thead>
                            <tr>
                                <th>時間</th>
                                <th>處理狀態</th>
                                <th>處理人員</th>
                                <th>出示意見</th>
                                <th>審核結果</th>
                            </tr>
                        </thead>
                        <tbody>
                                @foreach (var item in Model.FormDetails.FormDetailsFormProcesses) { 
                                <tr>
                                <td>@item.Date</td>
                                <td>@item.UserActivityIdDescription</td>
                                <td>@item.EmployeeName</td>
                                <td>@item.Remark</td>
                                <td>@item.ResultDescription</td>
                            </tr>
                            }
                          

                        </tbody>
                    </table>


                    <!-- /.row -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="item-name">需求內容</label>
                            </div>
                                <textarea rows="8" cols="110" disabled > @Model.FormDetails.Content</textarea>
                        </div>
                        <!-- /.col -->
                        <!-- /.col -->
                    </div>
                    <div class="row">
                        <!-- /.form-group -->
                        <div class="form-group">
                            <label style="margin-right:5%">聯繫電話</label><input class=" form-control" style="width:25%" disabled value="@Model.FormDetails.Tel" >
                        </div>

                        <!-- /.form-group -->
                        <div class="col-12 col-sm-6">

                            <!-- /.form-group -->
                        </div>
                        <!-- /.col -->
                        <div class="col-12 col-sm-7" style="display:flex">


                            <div class="form-group">
                                <button class="button btn btn-primary" type="button"><i class="fa-solid fa-file-arrow-down"></i>  附件下載</button>
                            </div>
                            <!-- /.form-group -->
                        </div>


                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>

            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->

</div>

@section Scripts
{
   
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
    <script>
        $(document).ready(function () {
            $("#btnInvalid").click(function () {
                 alert("工單已作廢");
            })
        });
    </script>
}
