@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<title>BPMPlus</title>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BPMPLUS</title>
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <!-- <link rel="stylesheet" href="~/AdminLTE/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css"> -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/summernote/summernote-bs4.min.css">
    <!-- SweetAlert -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        .sidebar-mini aside .brand-link {
          display: flex;
          justify-content: center;
          align-items: center;
          text-decoration: none;
          padding: 0.8rem 0.5rem;
          white-space: nowrap;
          transition: width 0.3s ease-in-out;
        }

        .wrapper .bpm-image {
          width: 50px;
          height: 50px;
          /* max-height: 50px; */
        }

        .brand-text {
          font-family: 'Arial', sans-serif;
          font-weight: bold;
          font-style: italic;
          font-size: 30px;
          color: white;
        }

        .nav-sidebar .img-circle{
          width: 30px;
          height: 30px;
          margin-right: 5px;
        }

        @@media (min-width: 992px) {
           .main-sidebar:hover .brand-link {
            width: 250px;
            transition: width 0.3s ease-in-out;
          }

           .main-sidebar:hover .brand-text {
            display: inline;
          }

           .main-sidebar .brand-link {
            /* width: 4.6rem; */
            overflow: hidden;
          }

          .sidebar-mini.sidebar-collapse .main-sidebar .brand-text {
            display: none;
          }
        }
    </style>
    @await RenderSectionAsync("Style", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="flex-column justify-content-center align-items-center">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">BPMPlus</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a class="brand-link" href="@Url.Action("Index","Home")">
                <img src="~/images/sidebar-logo.png" alt="Logo" class="bpm-image img-circle">
                <span class="brand-text">BPMPlus</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <!-- User -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">

                                <img id="profilePicture" src="~/images/default.jpg" class="img-circle" style="width:30px;height:30px" asp-append-version="true">
                                @*  <img id="profilePicture" src="@ViewBag.ProfilePicturePath" class="img-circle" style="width:30px;height:30px"> *@

                                @{
                                    var userDepartment = HttpContextAccessor.HttpContext.Request.Cookies["Department"];
                                    var userName = HttpContextAccessor.HttpContext.Request.Cookies["UserName"];
                                    <p style="margin-left:5px;">@userDepartment @userName</p>
                                }

                            </a>
                            <div class="user-panel d-flex image"></div>

                            <ul class="nav nav-treeview">
                                <li class="nav-item" style="margin-left:10%;">
                                    <a class="nav-link" href="@Url.Action("ResetPassWord","Login")">修改密碼</a>
                                </li>
                                <li class="nav-item" style="margin-left:10%;">
                                    <a class="nav-link" href="@Url.Action("UploadProfilePicture","Login")">設定</a>
                                </li>
                                <li class="nav-item" style="margin-left:10%;">
                                    <a class="nav-link" href="@Url.Action("Logout","Login")">登出</a>
                                </li>
                            </ul>
                        </li>
                        <!-- /User -->

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    工單管理
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item" style="margin-left: 5%">
                                    <a class="nav-link" asp-area="" asp-controller="ToDoList" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>待辦清單</p>
                                    </a>
                                </li>
                                <li class="nav-item" style="margin-left: 5%">
                                    <a class="nav-link" asp-area="" asp-controller="QueryForms" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>查詢工單</p>
                                    </a>
                                </li>
                                <li class="nav-item" style="margin-left: 5%">
                                    <a class="nav-link" asp-area="" asp-controller="CreateForms" asp-action="Index" asp-route-ReturnUrl="@Context.Request.Path">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>新增工單</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    專案管理
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item" style="margin-left: 5%">
                                    <a class="nav-link" asp-area="" asp-controller="CreateProjects" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>新建專案</p>
                                    </a>
                                </li>
                                <li class="nav-item" style="margin-left: 5%">
                                    <a class="nav-link" asp-area="" asp-controller="QueryProjects" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>查詢專案</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon far fa-plus-square"></i>
                                <p>
                                    會議室預約
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item" style="margin-left: 5%">
                                    <a class="nav-link" asp-area="" asp-controller="CurrentMeetingRoom" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>目前會議室</p>
                                    </a>
                                </li>
                                <li class="nav-item" style="margin-left: 5%">
                                    <a class="nav-link" asp-area="" asp-controller="BookingMeetingRoom" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>新增預約</p>
                                    </a>
                                </li>
                              
                            </ul>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
    </div>

    <!-- /.content-wrapper -->
    <!-- jQuery -->
    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/AdminLTE/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>$.widget.bridge('uibutton', $.ui.button)</script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    <script src="~/AdminLTE/plugins/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="~/AdminLTE/plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="~/AdminLTE/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/AdminLTE/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/AdminLTE/plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/AdminLTE/plugins/moment/moment.min.js"></script>
    <script src="~/AdminLTE/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/AdminLTE/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/AdminLTE/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/AdminLTE/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE/dist/js/adminlte.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE/dist/js/demo.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/AdminLTE/dist/js/pages/dashboard.js"></script>
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

<script>
    
        $.ajax({
            url: '@Url.Action("ProfilePicture", "Login")', 
            type: 'GET',
            success: function (response) {
                if (response.filePath != null) {
                    $('#profilePicture').attr('src', response.filePath);
                }
            },
            error: function () {
                console.log("Error retrieving profile picture.");
            }
        });


</script>