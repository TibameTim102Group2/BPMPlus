@section Style {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <!-- include summernote css/js-->
    <link href="summernote-bs5.css" rel="stylesheet">
    <script src="summernote-bs5.js"></script>
    <!-- 建立工單的樣式 -->
    <style>
        .outside {
            padding-top: 20px;
            padding-right: 20px;
        }

        .backcolor {
            background-color: rgb(225, 229, 252);
        }

        .inside {
            background-color: rgb(225, 239, 252);
            margin: auto;
            margin-right: 0px;
            width: 1000px;
            padding-right: 20px;
            padding-left: 20px;
        }


        .inputField {
            display: flex;
            height: 40px;
        }

        label {
            margin: auto;
            display: inline;
            width: 150px;
            margin-right: 20PX;
            background-color: #458bfc;
            text-align: center;
            color: white;
            text-decoration: double;
            border-radius: 5%;
        }

        .formCrud {
            display: flex;
            height: 150px;
        }

        .nav {
            /* width: 120px;
                           height: 40px; */
            color: blue;
            margin: auto;
            /* border-radius: 15%; */
        }

        .form-label {
            padding-top: 20px;
            display: flex;
            margin: auto;
        }

        .note {
            margin-top: 50px;
            margin-left: 55px;
        }

        .noteContent {
            background-color: #458bfc;
            color: white;
            border-radius: 5%;
            width: 100px;
            text-align: center;
        }

        .txtInput {
            width: 850px;
            background-color: white;
        }

        .submit-btn {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .form-file {
            display: flex;
            padding-top: 20px;
            width: 905px;
            padding-left: 55px;
        }

        .form-date {
            padding-top: 20px;
            margin-left: 55px;
            height: 58px;
            display: flex;
        }
    </style>
}
<body>
    <div class="outside">
        <div class="inside">
            <!-- 五個導覽項 -->
            <div class="formCrud">
                <div class="nav">
                    <!-- <label class="form-label ">待辦清單</label> -->
                    <button class="btn btn-light  ">待辦清單</button>
                </div>
                <div class="nav">
                    <!-- <label class="form-label ">查詢工單</label> -->
                    <button class="btn btn-light ">查詢工單</button>
                </div>
                <div class="nav">
                    <!-- <label class="form-label " style="color: white;">新增工單</label> -->
                    <button class="btn btn-primary " style="color: white;">新增工單</button>
                </div>
                <div class="nav">
                    <!-- <label class="form-label ">工單處理流程</label> -->
                    <button class="btn btn-light  ">工單處理流程</button>
                </div>
                <div class="nav">
                    <!-- <label class="form-label ">審核工單</label> -->
                    <button class="btn btn-light ">審核工單</button>
                </div>
            </div>
            <!-- 表單內容 -->
            <div class="backcolor">
                <form>
                    <div class="mb-3 inputField ">
                        <div class="mb-3 form-label">
                            <label for="xxx1">員工編號</label>
                            <input type="xxx1" class="form-control">
                        </div>
                        <div class="mb-3 form-label">
                            <label for="xxx2">需求類別</label>
                            <input type="xxx2" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3 inputField ">
                        <div class="mb-3 form-label">
                            <label for="xxx1">需求部門</label>
                            <input type="xxx1" class="form-control">
                        </div>
                        <div class="mb-3 form-label">
                            <label for="xxx2">派單對象</label>
                            <input type="xxx2" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3 inputField ">
                        <div class="mb-3 form-label">
                            <label for="xxx1">聯繫電話</label>
                            <input type="xxx1" class="form-control">
                        </div>
                        <div class="mb-3 form-label">
                            <label for="xxx2">專案編號</label>
                            <input type="xxx2" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3 inputField ">
                        <div class="mb-3 form-label">
                            <label for="xxx1">複製單號</label>
                            <input type="xxx1" class="form-control">
                        </div>
                        <div class="mb-3 form-label">
                            <label for="xxx2">歸納至專案</label>
                            <input type="xxx2" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3 inputField">
                        <div class="mb-3 form-date">
                            <label for="xxx2">希望完成日期</label>
                            <input type="xxx2" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3 form-file">
                        <label for="xxx1">檔案上傳</label>
                        <input type="file" class="form-control">
                    </div>
                    <!-- 需求內容的位置 -->

                    <div class="note">
                        <div class="noteContent">需求內容</div>
                        <!-- 引用quill文字編輯器的div-->
                        <div class="txtInput">
                            <div id="summernote">Hello Summernote</div>

                        </div>

                    </div>
                    <!-- 送出按鈕 -->
                    <div class="submit-btn">
                        <button type="submit" class="btn btn-primary">送出</button>
                    </div>



                </form>
            </div>

        </div>
    </div>




</body>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
        });
        var html = $('#summernote').summernote('code');
    </script>
}