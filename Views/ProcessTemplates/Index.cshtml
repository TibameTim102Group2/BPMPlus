@model IEnumerable<BPMPlus.Models.ProcessTemplate>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserActivity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
