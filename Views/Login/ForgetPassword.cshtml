@using BPMPlus.ViewModels.Login
@model ForgetPasswordVM
@section Style {
    <style>
        .validConfirm {
            font-size: 25px;
        }
    </style>
}

<div class="login-page bg-light">
    <div class="login-box">
        <div class="login-logo">
            <img src="/BPMPLUS.png" alt="" class="mb-3" style="width:20rem;">
        </div>
        <!-- /.login-logo -->
        @using (Html.BeginForm("Send", "login", new { ReturnUrl = Context.Request.Query["ReturnUrl"] }, FormMethod.Post, true, new { name = "loginForm", autocomplete = "off" }))
{
        <div id="app">
            <p class="validConfirm login-box-msg text-bold">忘記密碼</p>
            <div class="input-group mb-3">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "請輸入您的信箱" })
                <div class="input-group-append">
                    <div class="input-group">
                    </div>
                </div>
            </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            @Html.ActionLink("返回登入", "Index", "Home")
                        </div>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block" id="sendMail">寄送驗證信</button>
                    </div>
                    <!-- /.col -->
                    <!--顯示錯誤訊息 -->
                        <div style="color:red;">
                            @ViewBag.errMsg
                        </div>
                    <!-- /.col -->
                </div>
        </div>
}
    </div>
</div>

@section Scripts
{
    <script>
        $("#sendMail").click(function (e) { 
            alert("驗證信已寄出!");       //按了就會跳alert, 假的
        })
    </script>
}